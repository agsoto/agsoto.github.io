---
import { Button } from 'astro-pure/user'
import PageLayout from '@/layouts/BaseLayout.astro'
import vortex from "@/assets/icons/vortex.svg?raw"; 

export { getLangStaticPaths as getStaticPaths } from 'astro-pure/server';

const meta = {
  description: 'Not found',
  title: '404'
}

const lang = (Astro.currentLocale || 'en') as 'en' | 'es'

const contentMap = {
  en: {
    mainMessage: "Oops, you've encountered a black hole.",
    subMessage: "Sorry, we couldn't find your page."
  },
  es: {
    mainMessage: "¡Ups! encontraste un agujero negro.",
    subMessage: "Perdón, no existe la página que buscas." 
  }
} as const

const content = contentMap[lang] ?? contentMap.en
const buttonTitle = lang === 'es' ? 'Ir al inicio' : 'Back to home'

---

<PageLayout {meta}>
  <div class='px-4 py-10 text-center sm:px-6 lg:px-8'>
    <div>
      <Fragment style="margin: auto;" set:html={vortex} />
    </div>
    <h2 class='block text-5xl font-bold sm:text-7xl'>404</h2>
    <p class='mt-3 text-muted-foreground'>{content.mainMessage}</p>
    <p class='text-lg'>{content.subMessage}</p>
    <Button title={buttonTitle} href=`/${lang}/blog` style='back mt-4' class="mt-4"/>
  </div>
</PageLayout>

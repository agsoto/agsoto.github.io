---
// Tooltip.astro
interface Props {
  text: string;
}


const { text } = Astro.props;
---
<div class="relative group">
  <slot />
  <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 hidden group-hover:block bg-gray-800 text-white text-sm rounded-lg px-2 py-1">
    {text}
  </div>
</div>

---
import { Footer, Header, ThemeProvider } from 'astro-pure/components/basic'
import { ensureContentI18nLoaded } from 'astro-pure/server'
import type { SiteMeta } from 'astro-pure/types'
import BaseHead from '@/components/BaseHead.astro'
import config from '@/site-config'
import logo from "/src/assets/AGSMinimalLogoInteractive.svg?raw"; 

// Import the global.css file here so that it is included on
// all pages through the use of the <BaseLayout /> component.
import '@/assets/styles/global.css'
import '@/assets/styles/app.css'
import { getRelativeLocaleUrl } from 'astro:i18n'

interface Props {
  meta: SiteMeta
  highlightColor?: string
}

const {
  meta: { articleDate, description = config.description, ogImage, title },
  highlightColor,
  ...props
} = Astro.props

await ensureContentI18nLoaded(Astro.currentLocale as string)
---

<html lang={Astro.currentLocale as string}>
  <head>
    <BaseHead {articleDate} {description} {ogImage} {title} />
    <ThemeProvider />
  </head>

  <body class='flex justify-center bg-background text-foreground' {...props}>
    <slot name='background' />
    {
      highlightColor && (
        <div
          id='highlight-gradient'
          class='pointer-events-none absolute start-0 top-0 z-0 h-screen w-full opacity-25'
          style={`background-image:linear-gradient(${highlightColor},transparent)`}
        />
      )
    }
    <div
      class='w-full max-w-[70rem] px-4 sm:px-7 lg:px-10 min-h-[100dvh] flex flex-col justify-between'
    >
      <Header>
        <a slot="branding"
        class='z-30 text-xl font-semibold group-[.not-top]:ms-2 sm:group-[.not-top]:ms-3'
        style='transition:margin-inline 0.3s'
        href={`${getRelativeLocaleUrl(Astro.currentLocale as string)}`}
        aria-label='Brand'>
            <Fragment set:html={logo} />
        </a>
      </Header>
      <div class='flex-1 w-full'>
        <slot />
      </div>
      <Footer>
        <div slot='footer-links'>
          <span slot="copyright">
            <p class=''>ðŸŒ± by <a href={`${getRelativeLocaleUrl(Astro.currentLocale as string, '/credits')}`}>awesome people</a> & me.</p>
          </span>
        </div>
      </Footer>
    </div>

    {/* Set highlight color */}
    <style define:vars={{ highlightColor }}>
      :global(.highlight) {
        color: var(--highlightColor, hsl(var(--primary) / var(--un-text-opacity))) !important;
      }
      :global(.highlight-bg) {
        background-color: var(
          --highlightColor,
          hsl(var(--primary) / var(--un-text-opacity))
        ) !important;
      }
    </style>
  </body>
</html>
